{
  "name": "chahub",
  "scripts": {
    "postdeploy": "bin/init_staging"
  },
  "env": {
    "USE_SSL": "True",
    "CHANNEL_BACKEND": "asgi_redis.RedisChannelLayer"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql",
    "searchbox:starter",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }

  ]
}
